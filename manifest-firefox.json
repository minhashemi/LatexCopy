{
  "manifest_version": 2,
  "name": "LaTeX Content Copier",
  "version": "2.1",
  "description": "Copies the underlying LaTeX code from rendered math on websites including ChatGPT, Gemini, and other AI chat interfaces.",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "https://g.co/*",
    "https://gemini.google.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://perplexity.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "https://g.co/*",
        "https://gemini.google.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://perplexity.ai/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "LaTeX Content Copier"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "latex-copier@extension.com"
    }
  }
}
